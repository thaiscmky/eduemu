<div class="request card">
  <div class="card-header">
    <h2>Create New Request</h2>
  </div>
  <div class="card-body">
    <form id="new-request-form" class="row g-3">
      <div class="row mt-3 mb-3">
        <div class="col-auto">
          <label for="request-title" class="form-label">Framework/Library/Technology</label>
          <input type="text" class="form-control form-input" id="request-title" name="request-title" />
        </div>
        <div class="col-auto">
          <label class="form-label" for="request-url">Technology's Documentation URL</label>
          <input type="url" name="request-url" id="request-url" placeholder="https://example.com" pattern="https://.*" required class="form-input form-control"/>
        </div>
      </div>
      <div class="row">
        <div class="col-auto">
          <button type="submit" class="btn btn-primary mb-3">Create</button>
        </div>
      </div>
    </form>
  </div>
</div>
<script src="/js/new.js"></script>
<hr/>